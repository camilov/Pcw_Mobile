<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AbonosClass.AbonosActivity">


    <TableLayout
        android:id="@+id/tlAbonos"
        android:layout_width="339dp"
        android:layout_height="281dp"
        android:layout_marginTop="144dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TableRow
            android:baselineAligned="true">

            <TextView
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_column="0"
                android:layout_weight="1"
                android:text="@string/num_cuota" />

            <TextView
                android:text="@string/valor_abono"
                android:layout_width="30dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:textAlignment="center">
            </TextView>
            <TextView
                android:text="@string/fecha_abono"
                android:layout_width="30dp"
                android:layout_column="2"
                android:layout_weight="1"
                android:textAlignment="center">
            </TextView>
        </TableRow>
    </TableLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.918"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tlAbonos"
        app:srcCompat="@drawable/ic_plus" />


</androidx.constraintlayout.widget.ConstraintLayout>